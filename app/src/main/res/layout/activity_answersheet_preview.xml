<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".answersheetPreview"
    android:id="@+id/aspParent">

    <com.github.barteksc.pdfviewer.PDFView
        android:id="@+id/answerSheetView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/answerSheetBtn"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Main Menu"
        android:layout_above="@+id/asbottomtoolbar"
        android:layout_centerHorizontal="true"
        android:id="@+id/answerSheetBtn"/>
    <Toolbar
        android:id="@+id/asbottomtoolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:background="@color/green">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingStart="5dp"
            android:paddingEnd="10dp">

            <Button
                android:id="@+id/answerSheetBackBtn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="50"
                android:backgroundTint="@color/green"
                android:text="Back"
                android:textAlignment="center" />

            <Button
                android:id="@+id/answerSheetDownloadBtn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="50"
                android:backgroundTint="@color/green"
                android:text="Download"
                android:textAlignment="center" />
        </LinearLayout>
    </Toolbar>
</RelativeLayout>