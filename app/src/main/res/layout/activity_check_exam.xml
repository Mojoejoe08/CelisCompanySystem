<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".checkExam">
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/newSetRecView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/newSetBtn"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+New Set"
        android:layout_above="@+id/checkToolbar"
        android:layout_centerHorizontal="true"
        android:id="@+id/newSetBtn"
        android:layout_marginBottom="10dp"
        android:textSize="18sp"
        android:textStyle="bold"/>
    <Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:background="@color/green"
        android:id="@+id/checkToolbar">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingStart="5dp"
            android:paddingEnd="10dp">
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="50"
                android:textAlignment="center"
                android:text="Back"
                android:backgroundTint="@color/green"
                android:id="@+id/checkBackBtn"/>
        </LinearLayout>
    </Toolbar>
</RelativeLayout>