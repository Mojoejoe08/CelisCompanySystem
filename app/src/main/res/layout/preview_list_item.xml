<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="30dp"

    android:layout_marginBottom="5dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/border">

        <LinearLayout
            android:id="@+id/numques"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="5dp">
            <TextView
                android:id="@+id/inum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:text="1."
                android:textColor="@color/black"
                android:nextFocusDown="@+id/txtItemA"
                android:fontFamily="@font/centurygothic"/>
            <TextView
                android:id="@+id/txtItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="95"
                android:text="@string/app_name"
                android:textColor="@color/black"
                android:nextFocusDown="@+id/txtItemA"
                android:fontFamily="@font/centurygothic"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/LLAC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/numques"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:text="a."
                android:textColor="@color/black"
                android:nextFocusDown="@+id/txtItemA"
                android:fontFamily="@font/centurygothic"/>
            <TextView
                android:id="@+id/txtItemA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="45"
                android:text="@string/app_name"
                android:textColor="@color/black"
                android:nextFocusDown="@+id/txtItemB"
                android:fontFamily="@font/centurygothic"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:text="c."
                android:textColor="@color/black"
                android:nextFocusDown="@+id/txtItemA"
                android:fontFamily="@font/centurygothic"/>
            <TextView
                android:id="@+id/txtItemC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="45"
                android:text="@string/app_name"
                android:textColor="@color/black"
                android:nextFocusDown="@+id/txtItemD"
                android:fontFamily="@font/centurygothic"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/LLBD"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/LLAC"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:text="b."
                android:textColor="@color/black"
                android:nextFocusDown="@+id/txtItemA"
                android:fontFamily="@font/centurygothic"/>
            <TextView
                android:id="@+id/txtItemB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="45"
                android:text="@string/app_name"
                android:textColor="@color/black"
                android:nextFocusDown="@+id/txtItemC"
                android:fontFamily="@font/centurygothic"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:text="d."
                android:textColor="@color/black"
                android:nextFocusDown="@+id/txtItemA"
                android:fontFamily="@font/centurygothic"/>
            <TextView
                android:id="@+id/txtItemD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="45"
                android:fontFamily="@font/centurygothic"
                android:text="@string/app_name"
                android:textColor="@color/black"/>

        </LinearLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>